<div class="container">
    <h1 class="title">Burger Boss</h1>

    <div class="row">
        <h2>Burgers Ready For Consumption</h2>
        <ul>
            {{#each burger}}
            {{#unless devoured}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="row">
        <h2>Devoured Burgers</h2>
        <ul>
            {{#each burger}}
            {{#if devoured}}

            {{/if}}
            {{/each}}
        </ul>

    </div>


    <h2>Create Your Own Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="burgers">Burger Name:</label>
            <input type="text" id="burgers" name="name">
        </div>
        <button class="create-burger button green" type="submit">Add Burger!</button>
    </form>

</div>